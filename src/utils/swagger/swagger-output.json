    "/api/sign-up": {
      "post": {
        "summary": "회원가입",
        "tags": ["Users"],
        "description": "email와 비밀번호를 입력받아 회원가입하는 API",
        "responses": {
          "201": {
            "description": "회원가입이 완료되었습니다."
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "이미 존재하는 이메일입니다."
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "example": "any@gmail.com"
                  },
                  "password": {
                    "example": "aaaa4321"
                  },
                  "name": {
                    "example": "홍길동"
                  }
                }
              }
            }
          }
        }
      }
    },
