          "200": {
            "description": "로그인 되었습니다 !"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "존재하지 않는 이메일입니다. \n\n 비밀번호가 일치하지 않습니다."
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "example": "any@gmail.com"
                  },
                  "password": {
                    "example": "aaaa4321"
                  }
