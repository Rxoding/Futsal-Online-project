{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "futsal-online-project",
    "description": " 풋살 온라인 api "
  },
  "servers": [
    {
      "url": "http://localhost:3029",
      "description": ""
    }
  ],
  "tags": [
    {
      "name": "Transfer",
      "description": "이적 시장 API",

      "name": "Play",
      "description": "게임 플레이 API",

      "name": "PlayerDB",
      "description": "선수 DB API",

      "name": "Ranking",
      "description": "랭킹 API",

      "name": "Gacha",
      "description": "가챠 API",

      "name": "Team",
      "description": "팀 관련 API",

      "name": "Users",
      "description": "유저 관련 API"
    }
  ],
  "paths": {
    "/api/sign-up": {
      "post": {
        "summary": "회원가입",
        "tags": ["Users"],
        "description": "email와 비밀번호를 입력받아 회원가입하는 API",
        "responses": {
          "201": {
            "description": "회원가입이 완료되었습니다."
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "이미 존재하는 이메일입니다."
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "example": "any@gmail.com"
                  },
                  "password": {
                    "example": "aaaa4321"
                  },
                  "name": {
                    "example": "홍길동"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/sign-in": {
      "post": {
        "summary": "로그인",
        "tags": ["Users"],
        "description": "email와 비밀번호를 입력받아 검증후 로그인하는 API",
        "responses": {
          "200": {
            "description": "로그인 되었습니다 !"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "존재하지 않는 이메일입니다. \n\n 비밀번호가 일치하지 않습니다."
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "example": "any@gmail.com"
                  },
                  "password": {
                    "example": "aaaa4321"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/{userId}": {
      "get": {
        "summary": "유저 정보 조회",
        "tags": ["Users"],
        "description": "유저 정보 조회 API",
        "parameters": [
          {
            "name": "userId",
            "description": "유저Id",
            "in": "path",
            "example": "1",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "유저 정보"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "사용자를 찾을 수 없습니다! 다시 검색해주세요."
          }
        }
      }
    },
    "/api/user": {
      "patch": {
        "summary": "유저 이름 변경",
        "tags": ["Users"],
        "description": "유저의 이름을 변경하는 API",
        "responses": {
          "200": {
            "description": "닉네임을 성공적으로 변경하였습니다."
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "중복되는 닉네임입니다."
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "example": "이순신"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/chargeCash": {
      "put": {
        "summary": "캐시 충전",
        "tags": ["Users"],
        "description": "캐시 충전하는 API",
        "responses": {
          "200": {
            "description": "10000원을 충전하였습니다. 캐시 총액:11000"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "cash": {
                    "example": 10000
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/userPlayer": {
      "get": {
        "summary": "보유 선수 조회",
        "tags": ["Team"],
        "description": "보유하고 있는 선수들의 정보를 보여주는 API",
        "responses": {
          "200": {
            "description": "선수 데이터"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/userPlayer/{playerId}": {
      "get": {
        "summary": "보유 선수 상세 조회",
        "tags": ["Team"],
        "description": "보유하고 있는 선수의 정보를 보여주는 API",
        "parameters": [
          {
            "name": "playerId",
            "description": "선수Id",
            "in": "path",
            "required": true,
            "example": "1",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "선수 상세정보"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "patch": {
        "summary": "보유 선수 판매",
        "tags": ["Team"],
        "description": "보유하고 있는 선수 카드를 판매하는 API",
        "parameters": [
          {
            "name": "playerId",
            "description": "선수Id",
            "in": "path",
            "example": "1",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "카드 판매 완료!"
          },
          "401": {
            "description": "존재하지 않는 선수입니다. \n\n 판매할 수 있는 카드가 없습니다."
          }
        }
      }
    },
    "/api/roster": {
      "get": {
        "summary": "로스터 조회",
        "tags": ["Team"],
        "description": "현재 로스터에 있는 선수 목록 조회하는 API",
        "responses": {
          "200": {
            "description": "선수 목록"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "put": {
        "summary": "로스터 변경",
        "tags": ["Team"],
        "description": "3명의 선수 ID를 넣어 로스터 변경하는 API",
        "responses": {
          "200": {
            "description": "로스터는 중복되지 않는 3명을 지정해야합니다. \n\n 로스터 변경 트랜잭션 실패"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "roster": {
                    "example": "1,2,3"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/upgrade/{playerId}": {
      "post": {
        "summary": "선수 강화",
        "tags": ["Team"],
        "description": "선수를 일정 확률로 강화시키는 API (최대 강화 : 10)",
        "parameters": [
          {
            "name": "playerId",
            "description": "선수Id",
            "in": "path",
            "example": "1",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "이미 최대 강화에 도달하였습니다. \n\n강화에 필요한 카드 수가 모자랍니다."
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "해당 선수를 보유하고 있지 않습니다."
          }
        }
      }
    },
    "/api/gacha": {
      "get": {
        "summary": "선수 뽑기",
        "tags": ["Gacha"],
        "description": "선수 뽑는 API(천장 있음)",
        "responses": {
          "200": {
            "description": "이미 보유하고 있는 선수를 뽑아 강화재료로 변환되었습니다."
          },
          "201": {
            "description": "새로운 선수가 팀에 합류하였습니다!"
          },
          "400": {
            "description": "캐시가 부족합니다!"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "존재하지 않는 선수입니다."
          }
        }
      }
    },
    "/api/ranking": {
      "get": {
        "summary": "랭킹 조회",
        "tags": ["Ranking"],
        "description": "스코어에 따른 랭킹 조회 API",
        "responses": {
          "200": {
            "description": "랭킹 리스트"
          }
        }
      }
    },
    "/api/player": {
      "get": {
        "summary": "선수 DB 조회",
        "tags": ["PlayerDB"],
        "description": "DB에 저장되어있는 선수 목록 조회하는 API",
        "responses": {
          "201": {
            "description": "선수 목록"
          }
        }
      }
    },
    "/api/player/{playerId}": {
      "get": {
        "summary": "선수 DB 상세 조회",
        "tags": ["PlayerDB"],
        "description": "DB에 저장되어있는 선수를 상세 조회하는 API",
        "parameters": [
          {
            "name": "playerId",
            "description": "선수Id",
            "in": "path",
            "example": "1",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "선수 상세 정보"
          }
        }
      }
    },
    "/api/friendlymatch/{opponent}": {
      "post": {
        "summary": "친선 게임 플레이",
        "tags": ["Play"],
        "description": "상대를 지정해 게임 플레이할 수 있는 API",
        "parameters": [
          {
            "name": "opponent",
            "description": "상대유저Id",
            "in": "path",
            "example": "1",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "팀이 승리했습니다. 축하드립니다!\n\n무승부로 경기가 끝났습니다."
          },
          "400": {
            "description": "팀 A는 최소 3명의 선수가 필요합니다. \n\n팀 B는 최소 3명의 선수가 필요합니다."
          },
          "401": {
            "description": "팀 통계 업데이트 실패"
          },
          "404": {
            "description": "상대를 찾을 수 없습니다."
          }
        }
      }
    },
    "/api/playrank": {
      "post": {
        "summary": "랭크 게임 플레이",
        "tags": ["Play"],
        "description": "매칭시스템을 통해 게임 플레이할 수 있는 API",
        "responses": {
          "200": {
            "description": "팀이 승리했습니다. 축하드립니다!\n\n무승부로 경기가 끝났습니다."
          },
          "400": {
            "description": "팀 A는 최소 3명의 선수가 필요합니다. \n\n팀 B는 최소 3명의 선수가 필요합니다."
          },
          "401": {
            "description": "팀 통계 업데이트 실패"
          },
          "404": {
            "description": "상대를 찾을 수 없습니다."
          }
        }
      }
    },
    "/api/transfer/register": {
      "post": {
        "summary": "이적시장 등록",
        "tags": ["Transfer"],
        "description": "이적시장에 선수를 등록하는 API",
        "responses": {
          "201": {
            "description": "선수이(가) 이적시장에 등록되었습니다."
          },
          "400": {
            "description": "5등급 선수의 등록가격은 최소 ???원 이상이어야 합니다."
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "등록되지 않은 선수입니다.\n\n존재하지 않는 선수입니다."
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "playerId": {
                    "example": 1
                  },
                  "price": {
                    "example": 10000
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/transfer/purchase": {
      "patch": {
        "summary": "이적시장 구매",
        "tags": ["Transfer"],
        "description": "이적시장에 등록된 선수를 구매하는 API",
        "responses": {
          "200": {
            "description": "선수이(가) 구매되었습니다."
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "이적시장에 등록되지 않은 선수입니다."
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "marketId": {
                    "example": 1
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/transfer/cancel": {
      "patch": {
        "summary": "이적시장 취소",
        "tags": ["Transfer"],
        "description": "이적시장에 등록된 선수를 취소하는 API",
        "responses": {
          "200": {
            "description": "선수이(가) 등록 취소 되었습니다."
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "등록되지 않은 선수입니다."
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "marketId": {
                    "example": 1
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/transfer/list": {
      "get": {
        "summary": "이적시장 목록 조회",
        "tags": ["Transfer"],
        "description": "이적시장에 등록된 선수목록을 조회하는 API",
        "responses": {
          "200": {
            "description": "이적시장 선수 리스트"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "jwt": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization"
      }
    }
  }
}
